{
  "name": "tierralive-firmware",
  "private": true,
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.0.0"
  },
  "description": "Firmware for TierraLive devices",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "compile-device": "bash ./scripts/compile_device.sh",
    "compile-all": "bash ./scripts/compile_all.sh",
    "setup-esphome": "bash ./scripts/setup_esphome.sh",
    "ci-checks": "npm run compile-all",
    "new-version": "lerna version --sync-workspace-lock --yes",
    "new-version:preview": "lerna version --sync-workspace-lock --dry-run",
    "packages-changed": "lerna changed --json --since HEAD~1",
    "list-packages": "lerna list --json --all --long",
    "prepare": "husky || true",
    "commitlint": "commitlint --edit"
  },
  "workspaces": [
    "devices/**/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@lerna-lite/changed": "4.4.1",
    "@lerna-lite/cli": "4.11.0",
    "@lerna-lite/publish": "4.3.0",
    "conventional-changelog-conventionalcommits": "9.0.0",
    "husky": "9.1.7"
  }
}
